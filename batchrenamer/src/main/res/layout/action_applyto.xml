<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/action_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:gravity="center"
        android:text="@string/action_apply"
        android:layout_marginRight="@dimen/card_padding_between_elements"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup android:id="@+id/action_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="3"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_applyToName"
            android:id="@+id/action_radio_name" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_applyToExtension"
            android:id="@+id/action_radio_extension" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_applyToBoth"
            android:id="@+id/action_radio_both" />
    </RadioGroup>

</TableRow>