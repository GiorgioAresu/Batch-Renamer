<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:paddingTop="@dimen/card_padding_vertical"
    android:paddingRight="@dimen/card_padding_horizontal"
    android:paddingBottom="@dimen/card_padding_vertical"
    android:paddingLeft="@dimen/card_padding_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_title"
            style="@style/ActionCard_Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Action_Title"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/actionlistrow_button_remove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/actioncard_remove"
            android:src="@drawable/ic_action_remove_light"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <ImageView
        android:id="@+id/action_headerSeparator"
        tools:ignore="ContentDescription"
        style="@style/ActionCard_HeaderSeparator" />

    <!-- Content -->
    <ImageView
        android:id="@+id/action_imgContent"
        style="@style/ActionCard_ContentView"
        android:adjustViewBounds="true"
        android:contentDescription="@string/actioncard_list_row_contentdescription" />

</LinearLayout>