<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_marginTop="@dimen/cards_padding"
    android:layout_marginBottom="@dimen/cards_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_title"
            style="@style/ActionCard_Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Action_Title"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/actionlistrow_button_remove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:contentDescription="@string/action_remove"
            android:src="@drawable/ic_delete"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <ImageView
        tools:ignore="ContentDescription"
        style="@style/ActionCard_HeaderSeparator" />

    <!-- Content -->
    <ImageView
        android:id="@+id/action_imgContent"
        style="@style/ActionCards_ContentView"
        android:contentDescription="@string/action_list_row_contentdescription" />

</LinearLayout>