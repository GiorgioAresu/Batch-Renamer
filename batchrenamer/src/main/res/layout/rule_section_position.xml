<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:id="@+id/rule_position_header"
        style="@style/Rule_ItemLabel"
        android:text="@string/rule_generic_position" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/rule_position"
            style="@style/Rule_EditTextNumeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="3" />

        <CheckBox
            android:id="@+id/rule_position_backward"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rule_item_height"
            android:text="@string/rule_generic_position_backward" />

    </LinearLayout>
</merge>