<resources>

    <!-- Base application theme. -->
    <style name="Light" parent="android:Theme.Holo.Light" >
        <item name="ic_action_new">@drawable/ic_action_new_light</item>
        <item name="ic_action_edit">@drawable/ic_action_edit_light</item>
        <item name="ic_action_remove">@drawable/ic_action_remove_light</item>
        <item name="ic_action_start">@drawable/ic_action_start_light</item>
        <item name="ic_action_important">@drawable/ic_action_important_light</item>
        <item name="ic_action_half_important">@drawable/ic_action_half_important_light</item>
        <item name="ic_action_not_important">@drawable/ic_action_not_important_light</item>
        <item name="ic_action_import_export">@drawable/ic_action_import_export_light</item>
        <item name="ic_remove">@drawable/ic_action_remove_light</item>
        <item name="theme_background">#e5e5e5</item>
        <item name="section_header_title_color">@android:color/white</item>
        <item name="section_header_background_color">@android:color/holo_blue_light</item>
        <item name="card_background">@drawable/bg_card</item>
    </style>

    <!-- File list -->
    <style name="FileListHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="FileListRow_Text" parent="android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Rule tabs -->
    <style name="Rule_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Rule_HeaderSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/card_padding_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_padding_vertical</item>
        <item name="android:src">#ccc</item>
    </style>

    <style name="Rule_ContentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Rule_ItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Rule_EditTextAbstract">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/rule_item_height</item>
    </style>

    <style name="Rule_EditTextMultiline" parent="Rule_EditTextAbstract">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="Rule_EditTextNumeric" parent="Rule_EditTextAbstract">
        <item name="android:inputType">number</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

</resources>
