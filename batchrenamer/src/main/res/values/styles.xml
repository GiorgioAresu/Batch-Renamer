<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- File list -->
    <style name="ListItemRow" parent="android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Action tabs -->
    <style name="ActionCard_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:orientation">vertical</item>
        <!-- TODO: Togliere? -->
        <item name="android:layout_marginTop">@dimen/cards_padding</item>
        <item name="android:layout_marginBottom">@dimen/cards_padding</item>
    </style>

    <style name="ActionCard_ContentGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/cards_padding</item>
        <item name="android:layout_marginLeft">@dimen/cards_padding</item>
        <item name="android:layout_marginRight">@dimen/cards_padding</item>
        <item name="android:layout_marginTop">@dimen/cards_padding</item>
        <item name="android:stretchColumns">1</item>
        <item name="android:shrinkColumns">1</item>
    </style>

    <style name="ActionCard_Remove">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:contentDescription">@string/action_remove</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_delete</item>
    </style>

    <style name="ActionCard_TitleEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">@dimen/cards_padding</item>
        <item name="android:layout_marginRight">@dimen/cards_padding</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ActionCard_Title" parent="ActionCard_TitleEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ActionCard_HeaderSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:src">#e5e5e5</item>
    </style>

</resources>
