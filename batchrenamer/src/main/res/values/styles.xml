<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- File list -->
    <style name="ListItemRow" parent="android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Action tabs -->
    <style name="ActionCard_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">@dimen/cards_padding</item>
        <item name="android:layout_marginRight">@dimen/cards_padding</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ActionCard_HeaderSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:src">#e5e5e5</item>
    </style>

    <style name="ActionCards_ContentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/cards_padding</item>
        <item name="android:layout_marginRight">@dimen/cards_padding</item>
        <item name="android:layout_marginTop">@dimen/cards_padding_half</item>
        <item name="android:layout_marginBottom">@dimen/cards_padding_half</item>
    </style>

</resources>
